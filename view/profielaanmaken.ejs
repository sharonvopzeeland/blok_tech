<%- include ("./includes/head.ejs") %>

<body class="profiel">
    <%- include('includes/header.ejs') -%>

    <main>
        <h1>Profiel maken</h1>
 
        <form action="/matches" method="post">
            <label for="name">Naam:</label> 
                <input type="text" name="name" id="name" required size="30">
            

            <label for="email">Email: </label>
                <input type="email" name="email" id="email" required size="30">
           

            <label for="leeftijd">Leeftijd:</label>
                <input type="number" name="leeftijd" id="leeftijd">
            

            <label for="hobby">Hobby's:</label>
                <select name="hobby" id="hobby">
                    <option value="default" selected>-- Kies een hobby --</option>
                    <option value="Puzzelen">Puzzelen</option>
                    <option value="breien">Breien</option>
                    <option value="wandelen">Wandelen</option>
                    <option value="tuinieren">Tuinieren</option>
                    <option value="Kaarten">Kaarten</option>
                    <option value="sporten">Sporten</option>
                </select>
            

          
            <label for="omgeving">Omgeving:</label>
                <select name="omgeving" id="omgeving">
                    <option value="default" selected>-- Kies een provincie --</option>
                    <option value="NH">Noord-Holland</option>
                    <option value="ZH">Zuid-Holland</option>
                    <option value="UT">Utrecht</option>
                    <option value="ZE">Zeeland</option>
                    <option value="NB">Noord-Brabant</option>
                    <option value="LI">Limburg</option>
                    <option value="GE">Gelderland</option>
                    <option value="OV">Overijssel</option>
                    <option value="FL">Flevoland</option>
                    <option value="DR">Drenthe</option>
                    <option value="GR">Groningen</option>
                    <option value="FR">Friesland</option>
                </select>
            

            <!-- <label for="provincie">Provincie</label>
                <select name="provincie" id="provincie">
                        
                </select> -->
            <!-- select is filled with API data based on the clicked option from 'omgeving' above -->
            <label for="plaats">Plaats:</label> 
                <select name="plaats" id="plaats" disabled>
                    
                    <!-- hier de plaats-opties renderen, gebaseerd op de plaats die hierboven geselecteerd is -->
                </select>
    
            <button type="submit">Maak aan</button>
        </form>


        
    </main>

    <footer>
        <script src="/scripts/api.js"></script>
    </footer>
</body>
</html>
